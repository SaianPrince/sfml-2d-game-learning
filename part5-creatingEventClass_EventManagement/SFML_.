#include <iostream>
#include "nWindow.h"
#include "FuncTypes.h"
#include <functional>

class test
{
public:
	void write(sf::Keyboard::Key key) {
		std::cout << "hello" << std::endl;
	}
	void mouseMove(sf::Event::MouseMoveEvent move) {
		std::cout << move.x << "-" << move.y << std::endl;
	}
};

	int main()
	{
		nWindow window1;
		window1.nCreate(800, 800);
		sf::RectangleShape rectangle(sf::Vector2f(100, 200));
		test member1;
		test member2;
		auto newFunc = std::bind(&test::write, &member1, std::placeholders::_1);
		auto newMouse = std::bind(&test::mouseMove, &member2, std::placeholders::_1);
		window1.addKeyPressFunc(newFunc);
		window1.addMouseMoveFunc(newMouse);

		while (window1.isWindowOpen())
		{
			window1.eventManage();

			window1.nClear();

			window1.nDraw(rectangle);

			window1.show();

		}
	}
